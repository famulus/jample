#!/usr/bin/env ruby
# frozen_string_literal: true

require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  puts "== Installing Ruby gems =="
  # In Docker, bundler is present; just ensure dependencies are installed.
  system("bundle check") || system!("bundle install")

  # If you later add JS tooling (e.g., propshaft/esbuild), you can add a yarn/npm step here.

  puts "\n== Preparing database =="
  # Skip DB prep in test env unless explicitly requested.
  unless ENV["RAILS_ENV"] == "test"
    system! "bin/rails db:prepare"
  end

  puts "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"

  puts "\n== Restarting application server =="
  # In Docker this touches tmp/restart.txt for puma via tmp_restart plugin.
  system! "bin/rails restart"

  puts "\n== Done =="
end